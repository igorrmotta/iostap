  script(src="../build/iostap.js", type="text/javascript")
  script(type="text/javascript").
    window.iostap.initialize()

    // Prevent page scrolling for the button example.
    document.querySelector(".button").addEventListener("touchmove", function(e){
      e.preventDefault();
    })

    document.querySelector("body").addEventListener("iostap", function(e){
      var div = document.createElement("div"),
          body = this;

      div.textContent = "Tapped " + e.target.outerHTML;
      div.classList.add("response");

      body.appendChild(div, "beforeStart");

      div.offsetLeft;
      div.classList.add("response-active");

      window.setTimeout(function(){
        div.classList.remove("response-active")
      }, 1500);

      window.setTimeout(function(){
        body.removeChild(div);
      }, 3000);
    })

