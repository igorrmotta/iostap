  script(type="text/javascript").
    // Prevent page scrolling for the button example.
    $(".button").on("touchmove", function(e){
      e.preventDefault();
    })

    $("body").on("iostap", function(e){
      var resp = $("<div />")
        .text("Tapped " + e.target.outerHTML)
        .addClass("response")
        .appendTo(this);
      
      window.setTimeout(function(){
        resp.addClass("response-active")
      }, 1);

      window.setTimeout(function(){
        resp.remove();
      }, 1500);
    })

